/* 地图列表页样式 */

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 地图列表滚动区域 */
.map-scroll {
  flex: 1;
}

/* 地图列表 */
.map-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

/* 地图卡片 */
.map-card {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.map-card.target-map {
  border: 2rpx solid #409EFF;
  box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.2);
}

/* 公告区域 */
.announcement-section {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #FFF7E6;
  border-left: 4rpx solid #FFA940;
  border-radius: 8rpx;
}

.announcement-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #FFA940;
  margin-bottom: 10rpx;
}

.announcement-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 地图展示区域 */
.map-section {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #EBEEF5;
}

.map-section map {
  width: 100%;
  height: 100%;
}

/* 地图信息区域 */
.map-info-section {
  margin-bottom: 20rpx;
}

.map-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 10rpx;
}

.map-address {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.map-coordinates {
  font-size: 24rpx;
  color: #909399;
}

/* 导航按钮区域 */
.map-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  border-top: 1rpx solid #EBEEF5;
}

.navigate-btn {
  min-width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* 加载提示 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #909399;
}
