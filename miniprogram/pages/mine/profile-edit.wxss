/* 用户信息编辑页样式 */

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.edit-scroll {
  flex: 1;
  padding-bottom: 120rpx;
}

.form-card {
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.form-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 20rpx;
}

.required-mark {
  color: #ff6b6b;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 72rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #303133;
  background-color: #F5F7FA;
  border-radius: 8rpx;
  border: 1rpx solid #EBEEF5;
  box-sizing: border-box;
  line-height: 72rpx;
}

.form-tip {
  margin-top: 16rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #909399;
  line-height: 1.5;
}

.save-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #EBEEF5;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #409EFF;
  border-radius: 36rpx;
  border: none;
}

.save-btn::after {
  border: none;
}
