/* 商品列表页样式 */

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 商品列表滚动区域 */
.product-scroll {
  flex: 1;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

/* 商品卡片 */
.product-card {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 商品图片 */
.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #F5F7FA;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 商品信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

/* 商品名称 */
.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 商品简介 */
.product-description {
  font-size: 26rpx;
  color: #909399;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 商品简介 - 普通文本内容 */
.description-content {
  font-size: 26rpx;
  color: #909399;
  line-height: 1.6;
}

/* 商品简介 - 富文本内容 */
.description-content-rich {
  font-size: 26rpx;
  color: #909399;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

/* 加载更多提示 */
.loading-more,
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #909399;
}
