/* 商品详情页样式（纯展示模式） */

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.product-detail {
  display: flex;
  flex-direction: column;
}

/* 商品图片轮播 */
.product-swiper {
  width: 100%;
  height: 750rpx;
  background-color: #ffffff;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-image-single {
  width: 100%;
  height: 750rpx;
  background-color: #ffffff;
}

/* 商品信息 */
.product-info {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
}

/* 商品名称 */
.product-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

/* 商品简介 */
.product-description {
  margin-top: 20rpx;
}

.description-content {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  font-size: 28rpx;
  color: #909399;
}
