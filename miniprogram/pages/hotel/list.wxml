<!--酒店列表页-->
<view class="page-container">
  <!-- 酒店列表 -->
  <scroll-view
    class="hotel-scroll"
    scroll-y
    enable-back-to-top
    refresher-enabled
    refresher-triggered="{{loading && page === 1}}"
    bindrefresherrefresh="onPullDownRefresh"
    bindscrolltolower="onReachBottom"
  >
    <!-- 酒店卡片列表 -->
    <view wx:if="{{hotelList.length > 0}}" class="hotel-list">
      <view
        wx:for="{{hotelList}}"
        wx:key="id"
        class="hotel-item"
      >
        <product-card
          product="{{item}}"
          product-type="HOTEL"
          show-price="{{true}}"
          show-rating="{{false}}"
          bindtap="onHotelTap"
        />
      </view>
    </view>

    <!-- 空状态 -->
    <view wx:else class="empty-container">
      <empty text="暂无酒店" show-action="{{false}}" />
    </view>

    <!-- 加载更多提示 -->
    <view wx:if="{{hotelList.length > 0 && loading && page > 1}}" class="loading-more">
      <text>加载中...</text>
    </view>
    <view wx:if="{{hotelList.length > 0 && !hasMore && !loading}}" class="no-more">
      <text>没有更多了</text>
    </view>
  </scroll-view>
</view>
