/* 订单列表页样式 */

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 订单状态标签栏 */
.status-tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: 88rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #EBEEF5;
  white-space: nowrap;
}

.status-tabs-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
}

.status-tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  height: 88rpx;
  margin-right: 20rpx;
  position: relative;
  flex-shrink: 0;
}

.tab-text {
  font-size: 28rpx;
  color: #606266;
  transition: all 0.3s;
}

.status-tab.active .tab-text {
  color: #409EFF;
  font-weight: 600;
}

.status-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 4rpx;
  background-color: #409EFF;
  border-radius: 2rpx;
}

/* 订单列表滚动区域 */
.order-scroll {
  flex: 1;
  margin-top: 88rpx; /* 状态标签栏高度 */
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

/* 订单卡片 */
.order-card {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.order-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex: 1;
}

.order-no {
  font-size: 26rpx;
  color: #909399;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status-PENDING_PAY {
  color: #E6A23C;
  background-color: #FDF6EC;
}

.status-PAID {
  color: #409EFF;
  background-color: #ECF5FF;
}

.status-USED {
  color: #67C23A;
  background-color: #F0F9FF;
}

.status-COMPLETED {
  color: #909399;
  background-color: #F5F7FA;
}

.status-CANCELLED,
.status-REFUNDED {
  color: #F56C6C;
  background-color: #FEF0F0;
}

/* 订单商品信息 */
.order-items {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #F5F7FA;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-specs {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 10rpx;
}

.item-price {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.price-label {
  font-size: 24rpx;
  color: #606266;
}

.price-value {
  font-size: 28rpx;
  color: #F56C6C;
  font-weight: 600;
}

/* 订单底部 */
.order-footer {
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  border-top: 1rpx solid #EBEEF5;
}

.order-total {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.discount-info {
  font-size: 24rpx;
  color: #67C23A;
  margin-right: 20rpx;
}

.total-label {
  font-size: 26rpx;
  color: #606266;
  margin-right: 8rpx;
}

.total-price {
  font-size: 32rpx;
  color: #F56C6C;
  font-weight: 600;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
  transition: all 0.3s;
}

.cancel-btn {
  color: #606266;
  background-color: #F5F7FA;
  border: 1rpx solid #DCDFE6;
}

.cancel-btn:active {
  background-color: #EBEDF0;
}

.pay-btn {
  color: #ffffff;
  background-color: #409EFF;
}

.pay-btn:active {
  background-color: #66B1FF;
}

.refund-btn {
  color: #F56C6C;
  background-color: #FEF0F0;
  border: 1rpx solid #F56C6C;
}

.refund-btn:active {
  background-color: #FDE2E2;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

/* 加载更多提示 */
.loading-more,
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #909399;
}
