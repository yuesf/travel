<!--景点列表页-->
<view class="page-container">
  <!-- 景点列表 -->
  <scroll-view
    class="attraction-scroll"
    scroll-y
    enable-back-to-top
    refresher-enabled
    refresher-triggered="{{loading && page === 1}}"
    bindrefresherrefresh="onPullDownRefresh"
    bindscrolltolower="onReachBottom"
  >
    <!-- 景点卡片列表 -->
    <view wx:if="{{attractionList.length > 0}}" class="attraction-list">
      <view
        wx:for="{{attractionList}}"
        wx:key="id"
        class="attraction-item"
      >
        <product-card
          product="{{item}}"
          product-type="ATTRACTION"
          show-price="{{true}}"
          show-rating="{{false}}"
          bindtap="onAttractionTap"
        />
      </view>
    </view>

    <!-- 空状态 -->
    <view wx:else class="empty-container">
      <empty text="暂无景点" show-action="{{false}}" />
    </view>

    <!-- 加载更多提示 -->
    <view wx:if="{{attractionList.length > 0 && loading && page > 1}}" class="loading-more">
      <text>加载中...</text>
    </view>
    <view wx:if="{{attractionList.length > 0 && !hasMore && !loading}}" class="no-more">
      <text>没有更多了</text>
    </view>
  </scroll-view>
</view>
