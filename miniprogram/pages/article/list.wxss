/* 文章列表页样式 */

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 筛选栏 */
.filter-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: 88rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #EBEEF5;
}

.filter-scroll {
  height: 88rpx;
  white-space: nowrap;
}

.filter-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background-color: #F5F7FA;
  transition: all 0.3s;
  flex-shrink: 0;
}

.filter-item.active {
  background-color: #409EFF;
}

.filter-text {
  font-size: 26rpx;
  color: #606266;
}

.filter-item.active .filter-text {
  color: #ffffff;
  font-weight: 500;
}

/* 文章列表滚动区域 */
.article-scroll {
  flex: 1;
  margin-top: 88rpx; /* 筛选栏高度 */
}

/* 文章列表 */
.article-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

/* 文章卡片 */
.article-card {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 封面图 */
.article-cover {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  background-color: #F5F7FA;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 文章信息 */
.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

/* 标题 */
.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 摘要 */
.article-summary {
  font-size: 26rpx;
  color: #909399;
  line-height: 1.6;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 底部信息 */
.article-footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.article-meta {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.meta-item {
  font-size: 24rpx;
  color: #909399;
}

.meta-separator {
  margin: 0 8rpx;
  font-size: 24rpx;
  color: #C0C4CC;
}

.article-stats {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.stat-item {
  font-size: 24rpx;
  color: #909399;
}

.stat-separator {
  margin: 0 8rpx;
  font-size: 24rpx;
  color: #C0C4CC;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

/* 加载更多提示 */
.loading-more,
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #909399;
}
