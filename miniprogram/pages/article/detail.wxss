/* 文章详情页样式 */

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
}

.detail-content {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 文章名称容器 */
.article-title-container {
  width: 100%;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.article-title {
  display: block;
  width: 100%;
  font-size: 44rpx;
  font-weight: 600;
  color: #303133;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
  box-sizing: border-box;
}

/* 文章内容容器 */
.article-content-container {
  width: 100%;
  box-sizing: border-box;
}

.article-content {
  display: block;
  width: 100%;
  font-size: 32rpx;
  color: #606266;
  line-height: 1.8;
  word-wrap: break-word;
  word-break: break-all;
  box-sizing: border-box;
  overflow: hidden;
}

/* 富文本内容样式 - 确保图片适配屏幕 */
/* 注意：rich-text 组件中的图片已通过 JS 处理添加了 max-width: 100% 样式 */

.article-content-empty {
  display: block;
  width: 100%;
  font-size: 28rpx;
  color: #909399;
  text-align: center;
  padding: 60rpx 0;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  font-size: 28rpx;
  color: #909399;
}

/* 空状态 */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  min-height: 60vh;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}
