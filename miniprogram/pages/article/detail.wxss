/* 文章详情页样式 */

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

.detail-content {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

/* 文章头部 */
.article-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.article-meta {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}

.meta-item {
  font-size: 26rpx;
  color: #909399;
}

.meta-separator {
  margin: 0 8rpx;
  font-size: 26rpx;
  color: #C0C4CC;
}

.article-stats {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.stat-item {
  font-size: 24rpx;
  color: #909399;
}

.stat-separator {
  margin: 0 8rpx;
  font-size: 24rpx;
  color: #C0C4CC;
}

/* 封面图 */
.article-cover {
  width: 100%;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

/* 文章内容 */
.article-content {
  font-size: 30rpx;
  color: #303133;
  line-height: 1.8;
  margin-bottom: 40rpx;
}

/* 相关文章推荐 */
.related-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #EBEEF5;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
}

.related-list {
  display: flex;
  flex-direction: column;
}

.related-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #F5F7FA;
  border-radius: 8rpx;
}

.related-item:last-child {
  margin-bottom: 0;
}

.related-cover {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  background-color: #E4E7ED;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.related-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.related-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  line-height: 1.5;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.related-meta {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.related-stat {
  font-size: 24rpx;
  color: #909399;
}

.related-separator {
  margin: 0 8rpx;
  font-size: 24rpx;
  color: #C0C4CC;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  font-size: 28rpx;
  color: #909399;
}

/* 底部操作栏（固定） */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #EBEEF5;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
  transition: all 0.3s;
}

.action-btn.active {
  color: #409EFF;
}

.share-btn {
  border: none;
  background-color: transparent;
  padding: 0;
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 5rpx;
}

.action-text {
  font-size: 24rpx;
  color: #606266;
}

.action-btn.active .action-text {
  color: #409EFF;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
