/**
 * 小程序全局样式
 */

/* 引入公共样式 */
@import './styles/common.wxss';
@import './styles/variables.wxss';

/* 全局样式重置 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  color: #303133;
  line-height: 1.6;
  box-sizing: border-box;
}

/* 注意：微信小程序 WXSS 不支持 * 通用选择器，已将 box-sizing 移至 page 选择器 */

/* 通用容器 */
.container {
  padding: 30rpx;
}

/* 通用卡片 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 通用按钮 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary {
  background-color: #409EFF;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #337ecc;
}

.btn-default {
  background-color: #ffffff;
  color: #303133;
  border: 1rpx solid #dcdfe6;
}

.btn-default:active {
  background-color: #f5f7fa;
}

.btn-danger {
  background-color: #F56C6C;
  color: #ffffff;
}

.btn-danger:active {
  background-color: #dd6161;
}

/* 通用文本 */
.text-primary {
  color: #409EFF;
}

.text-success {
  color: #67C23A;
}

.text-warning {
  color: #E6A23C;
}

.text-danger {
  color: #F56C6C;
}

.text-info {
  color: #909399;
}

.text-main {
  color: #303133;
}

.text-regular {
  color: #606266;
}

.text-secondary {
  color: #909399;
}

.text-placeholder {
  color: #C0C4CC;
}

/* 文本大小 */
.text-xs {
  font-size: 20rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-base {
  font-size: 28rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

.text-xxl {
  font-size: 40rpx;
}

/* 文本对齐 */
.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 文本加粗 */
.text-bold {
  font-weight: bold;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  justify-content: space-around;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-xs { margin-top: 10rpx; }
.mt-sm { margin-top: 20rpx; }
.mt-md { margin-top: 30rpx; }
.mt-lg { margin-top: 40rpx; }

.mb-xs { margin-bottom: 10rpx; }
.mb-sm { margin-bottom: 20rpx; }
.mb-md { margin-bottom: 30rpx; }
.mb-lg { margin-bottom: 40rpx; }

.ml-xs { margin-left: 10rpx; }
.ml-sm { margin-left: 20rpx; }
.ml-md { margin-left: 30rpx; }
.ml-lg { margin-left: 40rpx; }

.mr-xs { margin-right: 10rpx; }
.mr-sm { margin-right: 20rpx; }
.mr-md { margin-right: 30rpx; }
.mr-lg { margin-right: 40rpx; }

.pt-xs { padding-top: 10rpx; }
.pt-sm { padding-top: 20rpx; }
.pt-md { padding-top: 30rpx; }
.pt-lg { padding-top: 40rpx; }

.pb-xs { padding-bottom: 10rpx; }
.pb-sm { padding-bottom: 20rpx; }
.pb-md { padding-bottom: 30rpx; }
.pb-lg { padding-bottom: 40rpx; }

.pl-xs { padding-left: 10rpx; }
.pl-sm { padding-left: 20rpx; }
.pl-md { padding-left: 30rpx; }
.pl-lg { padding-left: 40rpx; }

.pr-xs { padding-right: 10rpx; }
.pr-sm { padding-right: 20rpx; }
.pr-md { padding-right: 30rpx; }
.pr-lg { padding-right: 40rpx; }

/* 显示/隐藏 */
.hidden {
  display: none;
}

.visible {
  display: block;
}

/* 清除浮动 */
.clearfix::after {
  content: '';
  display: table;
  clear: both;
}
