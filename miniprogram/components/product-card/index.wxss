  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.room-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.room-modal-close {
  font-size: 40rpx;
  color: #909399;
  line-height: 1;
}

.room-modal-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.room-modal-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  background-color: #F5F7FA;
}

.room-modal-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.room-modal-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.room-modal-name {
  font-size: 28rpx;
  color: #303133;
  font-weight: bold;
}

.room-modal-price {
  font-size: 32rpx;
  color: #F56C6C;
  font-weight: bold;
}

.room-modal-dates {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

.date-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-label {
  font-size: 28rpx;
  color: #606266;
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding-right: 50rpx;
  box-sizing: border-box;
  min-height: 60rpx;
  position: relative;
}

.date-text {
  font-size: 28rpx;
  color: #303133;
}

.date-text.placeholder {
  color: #C0C4CC;
}

.date-arrow {
  font-size: 32rpx;
  color: #909399;
  transition: transform 0.3s ease;
}

.date-arrow.rotate {
  transform: rotate(90deg);
}

/* 房型选择器容器 */
.room-modal-room-selector {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #EBEEF5;
}

/* 房型列表（展开时显示） */
.room-modal-rooms {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 0;
  padding: 0 20rpx;
  background-color: #FAFBFC;
  border-radius: 12rpx;
  max-height: 0;
  opacity: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, opacity 0.3s ease, margin-top 0.3s ease, padding-top 0.3s ease, padding-bottom 0.3s ease;
}

.room-modal-rooms.expanded {
  max-height: 500rpx;
  opacity: 1;
  margin-top: 20rpx;
  padding: 20rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.room-modal-rooms-title {
