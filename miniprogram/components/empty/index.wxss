/**
 * 空状态组件样式
 */

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  min-height: 400rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
  text-align: center;
  margin-bottom: 40rpx;
}

.empty-action {
  width: 100%;
  display: flex;
  justify-content: center;
}

.action-button {
  padding: 0 60rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #409EFF;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 36rpx;
  border: none;
}

.action-button::after {
  border: none;
}
