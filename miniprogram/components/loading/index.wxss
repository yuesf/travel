/**
 * 加载组件样式
 */

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 9999;
}

/* 旋转加载动画 */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.spinner-item {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background-color: #409EFF;
  border-radius: 50%;
  animation: spinner-rotate 1.2s infinite ease-in-out;
}

.spinner-item:nth-child(1) {
  top: 0;
  left: 50%;
  margin-left: -4rpx;
  animation-delay: -1.1s;
}

.spinner-item:nth-child(2) {
  top: 8rpx;
  right: 8rpx;
  animation-delay: -1s;
}

.spinner-item:nth-child(3) {
  top: 50%;
  right: 0;
  margin-top: -4rpx;
  animation-delay: -0.9s;
}

.spinner-item:nth-child(4) {
  bottom: 8rpx;
  right: 8rpx;
  animation-delay: -0.8s;
}

.spinner-item:nth-child(5) {
  bottom: 0;
  left: 50%;
  margin-left: -4rpx;
  animation-delay: -0.7s;
}

.spinner-item:nth-child(6) {
  bottom: 8rpx;
  left: 8rpx;
  animation-delay: -0.6s;
}

.spinner-item:nth-child(7) {
  top: 50%;
  left: 0;
  margin-top: -4rpx;
  animation-delay: -0.5s;
}

.spinner-item:nth-child(8) {
  top: 8rpx;
  left: 8rpx;
  animation-delay: -0.4s;
}

@keyframes spinner-rotate {
  0%, 20%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}

/* 点状加载动画 */
.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.dot-item {
  width: 16rpx;
  height: 16rpx;
  background-color: #409EFF;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: dots-bounce 1.4s infinite ease-in-out both;
}

.dot-item:nth-child(1) {
  animation-delay: -0.32s;
}

.dot-item:nth-child(2) {
  animation-delay: -0.16s;
}

.dot-item:nth-child(3) {
  animation-delay: 0;
}

@keyframes dots-bounce {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.loading-text {
  font-size: 24rpx;
  color: #909399;
  margin-top: 20rpx;
}
