/* 骨架屏组件样式 */

.skeleton-container {
  width: 100%;
}

/* 动画效果 */
.skeleton-animated .skeleton-shimmer {
  animation: skeleton-shimmer 1.5s ease-in-out infinite;
}

@keyframes skeleton-shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 基础骨架元素 */
.skeleton-shimmer {
  background: linear-gradient(
    90deg,
    #f0f0f0 25%,
    #e0e0e0 50%,
    #f0f0f0 75%
  );
  background-size: 200% 100%;
  border-radius: 4rpx;
}

/* 首页骨架屏 */
.skeleton-home {
  padding: 20rpx;
}

.skeleton-banner {
  width: 100%;
  height: 300rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.skeleton-icons {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.skeleton-icon-item {
  width: 22%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.skeleton-icon-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  margin-bottom: 10rpx;
}

.skeleton-icon-text {
  width: 60rpx;
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
}

.skeleton-section {
  margin-bottom: 30rpx;
}

.skeleton-title {
  width: 200rpx;
  height: 36rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}

.skeleton-product-list {
  white-space: nowrap;
}

.skeleton-product-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.skeleton-product-image {
  width: 100%;
  height: 200rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.skeleton-product-name {
  width: 80%;
  height: 28rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  margin-bottom: 8rpx;
}

.skeleton-product-price {
  width: 60%;
  height: 32rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
}

/* 列表骨架屏 */
.skeleton-list {
  padding: 20rpx;
}

.skeleton-list-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.skeleton-line {
  height: 28rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  margin-bottom: 12rpx;
}

.skeleton-line-title {
  width: 60%;
  height: 32rpx;
}

.skeleton-line-text {
  width: 90%;
  height: 24rpx;
}

.skeleton-line-text-short {
  width: 40%;
  height: 24rpx;
}

.skeleton-line-price {
  width: 120rpx;
  height: 32rpx;
}

.skeleton-line-sales {
  width: 80rpx;
  height: 24rpx;
}

/* 卡片骨架屏 */
.skeleton-card {
  padding: 20rpx;
}

.skeleton-card-item {
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.skeleton-card-image {
  width: 100%;
  height: 300rpx;
  background: #f0f0f0;
}

.skeleton-card-content {
  padding: 20rpx;
}

/* 商品列表骨架屏 */
.skeleton-product-list-page {
  padding: 20rpx;
}

.skeleton-product-card {
  display: flex;
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-product-image-large {
  width: 200rpx;
  height: 200rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.skeleton-product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.skeleton-product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

/* 动画效果 */
.skeleton-animated .skeleton-banner,
.skeleton-animated .skeleton-icon-circle,
.skeleton-animated .skeleton-icon-text,
.skeleton-animated .skeleton-title,
.skeleton-animated .skeleton-product-image,
.skeleton-animated .skeleton-product-name,
.skeleton-animated .skeleton-product-price,
.skeleton-animated .skeleton-avatar,
.skeleton-animated .skeleton-line,
.skeleton-animated .skeleton-card-image,
.skeleton-animated .skeleton-product-image-large {
  background: linear-gradient(
    90deg,
    #f0f0f0 25%,
    #e8e8e8 50%,
    #f0f0f0 75%
  );
  background-size: 200% 100%;
  animation: skeleton-shimmer 1.5s ease-in-out infinite;
}
