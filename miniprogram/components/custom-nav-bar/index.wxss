/* 自定义导航栏组件样式 */

.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #409EFF;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  position: relative;
}

/* 左侧区域 - Logo */
.nav-left {
  display: flex;
  align-items: center;
  width: 100rpx;
  flex-shrink: 0;
}

.nav-logo {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

/* 中间区域 - 标题（居中） */
.nav-center {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  white-space: nowrap;
}

/* 右侧区域 - 扩展插槽 */
.nav-right {
  display: flex;
  align-items: center;
  width: 100rpx;
  justify-content: flex-end;
  flex-shrink: 0;
}
