/**
 * 轮播图组件样式
 */

.banner-swiper {
  width: 100%;
  position: relative;
}

.banner-item {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.banner-image-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-image-error {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.banner-placeholder {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.banner-image-error .error-text {
  font-size: 24rpx;
  color: #909399;
}

.banner-video-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-video {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-video-error {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}
