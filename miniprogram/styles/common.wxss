/**
 * 公共样式
 */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #909399;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #EBEEF5;
  margin: 20rpx 0;
}

.divider-vertical {
  width: 1rpx;
  height: 30rpx;
  background-color: #EBEEF5;
  margin: 0 20rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  line-height: 1;
}

.tag-primary {
  background-color: #ECF5FF;
  color: #409EFF;
}

.tag-success {
  background-color: #F0F9FF;
  color: #67C23A;
}

.tag-warning {
  background-color: #FDF6EC;
  color: #E6A23C;
}

.tag-danger {
  background-color: #FEF0F0;
  color: #F56C6C;
}

/* 徽章 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  background-color: #F56C6C;
  color: #FFFFFF;
  font-size: 20rpx;
  line-height: 1;
}

.badge-dot {
  min-width: 16rpx;
  height: 16rpx;
  padding: 0;
  border-radius: 50%;
}
