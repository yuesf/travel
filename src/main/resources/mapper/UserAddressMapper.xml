<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.UserAddressMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.UserAddress">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="receiver_name" property="receiverName"/>
        <result column="receiver_phone" property="receiverPhone"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="district" property="district"/>
        <result column="detail_address" property="detailAddress"/>
        <result column="is_default" property="isDefault"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, receiver_name, receiver_phone, province, city, district, detail_address, is_default, create_time, update_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_address
        WHERE id = #{id}
    </select>

    <!-- 根据用户ID查询收货地址列表（默认地址排在第一位） -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_address
        WHERE user_id = #{userId}
        ORDER BY is_default DESC, create_time DESC
    </select>

    <!-- 根据用户ID和地址ID查询收货地址（验证地址是否属于该用户） -->
    <select id="selectByIdAndUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_address
        WHERE id = #{id} AND user_id = #{userId}
    </select>

    <!-- 插入收货地址 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_address (
            user_id, receiver_name, receiver_phone, province, city, district, detail_address, is_default
        ) VALUES (
            #{userId}, #{receiverName}, #{receiverPhone}, #{province}, #{city}, #{district}, #{detailAddress}, #{isDefault}
        )
    </insert>

    <!-- 更新收货地址 -->
    <update id="updateById">
        UPDATE user_address
        <set>
            <if test="receiverName != null">receiver_name = #{receiverName},</if>
            <if test="receiverPhone != null">receiver_phone = #{receiverPhone},</if>
            <if test="province != null">province = #{province},</if>
            <if test="city != null">city = #{city},</if>
            <if test="district != null">district = #{district},</if>
            <if test="detailAddress != null">detail_address = #{detailAddress},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除收货地址 -->
    <delete id="deleteById">
        DELETE FROM user_address
        WHERE id = #{id}
    </delete>

    <!-- 取消用户所有地址的默认状态 -->
    <update id="cancelAllDefault">
        UPDATE user_address
        SET is_default = 0
        WHERE user_id = #{userId}
    </update>

    <!-- 设置指定地址为默认地址 -->
    <update id="setDefault">
        UPDATE user_address
        SET is_default = 1
        WHERE id = #{id} AND user_id = #{userId}
    </update>

</mapper>
