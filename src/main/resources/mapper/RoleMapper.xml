<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, code, description, status, create_time, update_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role
        WHERE id = #{id}
    </select>

    <!-- 根据代码查询 -->
    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role
        WHERE code = #{code}
    </select>

    <!-- 查询所有角色 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role
        WHERE status = 1
        ORDER BY create_time DESC
    </select>

    <!-- 根据用户ID查询角色 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT r.id, r.name, r.code, r.description, r.status, r.create_time, r.update_time
        FROM role r
        INNER JOIN admin_user au ON r.id = au.role_id
        WHERE au.id = #{userId} AND r.status = 1
    </select>

    <!-- 查询角色的权限代码列表 -->
    <select id="selectPermissionCodesByRoleId" resultType="java.lang.String">
        SELECT p.code
        FROM permission p
        INNER JOIN role_permission rp ON p.id = rp.permission_id
        WHERE rp.role_id = #{roleId}
        ORDER BY p.sort
    </select>

    <!-- 插入角色 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role (
            name, code, description, status
        ) VALUES (
            #{name}, #{code}, #{description}, #{status}
        )
    </insert>

    <!-- 更新角色 -->
    <update id="updateById">
        UPDATE role
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="code != null">code = #{code},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
