<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.ArticleCategoryMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.ArticleCategory">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="icon" property="icon"/>
        <result column="description" property="description"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, icon, description, sort, status, create_time, update_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM article_category
        WHERE id = #{id}
    </select>

    <!-- 查询所有分类列表 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM article_category
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY sort ASC, create_time DESC
    </select>

    <!-- 插入分类 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article_category (
            name, icon, description, sort, status
        ) VALUES (
            #{name}, #{icon}, #{description}, #{sort}, #{status}
        )
    </insert>

    <!-- 更新分类信息 -->
    <update id="updateById">
        UPDATE article_category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="description != null">description = #{description},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除分类 -->
    <delete id="deleteById">
        DELETE FROM article_category WHERE id = #{id}
    </delete>

    <!-- 检查分类下是否有文章 -->
    <select id="countArticlesByCategoryId" resultType="long">
        SELECT COUNT(*)
        FROM article
        WHERE category_id = #{categoryId}
    </select>

</mapper>
