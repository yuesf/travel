<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.SyncLogMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.SyncLog">
        <id column="id" property="id"/>
        <result column="sync_type" property="syncType"/>
        <result column="sync_config_id" property="syncConfigId"/>
        <result column="status" property="status"/>
        <result column="total_count" property="totalCount"/>
        <result column="success_count" property="successCount"/>
        <result column="failed_count" property="failedCount"/>
        <result column="error_message" property="errorMessage"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, sync_type, sync_config_id, status, total_count, success_count, failed_count,
        error_message, start_time, end_time, create_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sync_log
        WHERE id = #{id}
    </select>

    <!-- 分页查询同步日志列表 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sync_log
        <where>
            <if test="syncType != null and syncType != ''">
                AND sync_type = #{syncType}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计同步日志总数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*)
        FROM sync_log
        <where>
            <if test="syncType != null and syncType != ''">
                AND sync_type = #{syncType}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

    <!-- 插入同步日志 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sync_log (
            sync_type, sync_config_id, status, total_count, success_count, failed_count,
            error_message, start_time, end_time
        ) VALUES (
            #{syncType}, #{syncConfigId}, #{status}, #{totalCount}, #{successCount}, #{failedCount},
            #{errorMessage}, #{startTime}, #{endTime}
        )
    </insert>

    <!-- 更新同步日志 -->
    <update id="updateById">
        UPDATE sync_log
        <set>
            <if test="status != null">status = #{status},</if>
            <if test="totalCount != null">total_count = #{totalCount},</if>
            <if test="successCount != null">success_count = #{successCount},</if>
            <if test="failedCount != null">failed_count = #{failedCount},</if>
            <if test="errorMessage != null">error_message = #{errorMessage},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
