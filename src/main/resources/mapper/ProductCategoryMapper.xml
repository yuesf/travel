<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.ProductCategoryMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.ProductCategory">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="icon" property="icon"/>
        <result column="parent_id" property="parentId"/>
        <result column="level" property="level"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="type" property="type"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, icon, parent_id, level, sort, status, type, create_time, update_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_category
        WHERE id = #{id}
    </select>

    <!-- 查询所有分类列表 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_category
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
        </where>
        ORDER BY sort ASC, create_time ASC
    </select>

    <!-- 根据父分类ID查询子分类列表 -->
    <select id="selectByParentId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_category
        WHERE parent_id = #{parentId}
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="type != null">
            AND type = #{type}
        </if>
        ORDER BY sort ASC, create_time ASC
    </select>

    <!-- 查询分类树（一级分类及其子分类） -->
    <select id="selectTree" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM product_category
        WHERE level = 1
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="type != null">
            AND type = #{type}
        </if>
        ORDER BY sort ASC, create_time ASC
    </select>

    <!-- 插入分类 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product_category (
            name, icon, parent_id, level, sort, status, type
        ) VALUES (
            #{name}, #{icon}, #{parentId}, #{level}, #{sort}, #{status}, #{type}
        )
    </insert>

    <!-- 更新分类信息 -->
    <update id="updateById">
        UPDATE product_category
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="icon != null">
                icon = #{icon},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除分类（物理删除） -->
    <delete id="deleteById">
        DELETE FROM product_category
        WHERE id = #{id}
    </delete>

    <!-- 检查分类下是否有商品 -->
    <select id="countProductsByCategoryId" resultType="long">
        SELECT COUNT(*)
        FROM product
        WHERE category_id = #{categoryId}
    </select>

    <!-- 检查是否有子分类 -->
    <select id="countChildrenByParentId" resultType="long">
        SELECT COUNT(*)
        FROM product_category
        WHERE parent_id = #{parentId}
    </select>

</mapper>
