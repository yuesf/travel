<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.PermissionMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.Permission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="parent_id" property="parentId"/>
        <result column="path" property="path"/>
        <result column="sort" property="sort"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, code, type, parent_id, path, sort, create_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM permission
        WHERE id = #{id}
    </select>

    <!-- 根据代码查询 -->
    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM permission
        WHERE code = #{code}
    </select>

    <!-- 查询所有权限 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM permission
        ORDER BY sort, create_time
    </select>

    <!-- 根据父ID查询权限列表 -->
    <select id="selectByParentId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM permission
        WHERE parent_id = #{parentId}
        ORDER BY sort, create_time
    </select>

    <!-- 根据角色ID查询权限列表 -->
    <select id="selectByRoleId" resultMap="BaseResultMap">
        SELECT p.id, p.name, p.code, p.type, p.parent_id, p.path, p.sort, p.create_time
        FROM permission p
        INNER JOIN role_permission rp ON p.id = rp.permission_id
        WHERE rp.role_id = #{roleId}
        ORDER BY p.sort
    </select>

    <!-- 插入权限 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO permission (
            name, code, type, parent_id, path, sort
        ) VALUES (
            #{name}, #{code}, #{type}, #{parentId}, #{path}, #{sort}
        )
    </insert>

    <!-- 更新权限 -->
    <update id="updateById">
        UPDATE permission
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="code != null">code = #{code},</if>
            <if test="type != null">type = #{type},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="path != null">path = #{path},</if>
            <if test="sort != null">sort = #{sort},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
