<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.UserArticleFavoriteMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.UserArticleFavorite">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="article_id" property="articleId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 插入收藏记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_article_favorite (user_id, article_id)
        VALUES (#{userId}, #{articleId})
    </insert>

    <!-- 删除收藏记录 -->
    <delete id="delete">
        DELETE FROM user_article_favorite
        WHERE user_id = #{userId} AND article_id = #{articleId}
    </delete>

    <!-- 检查用户是否已收藏 -->
    <select id="countByUserIdAndArticleId" resultType="int">
        SELECT COUNT(*)
        FROM user_article_favorite
        WHERE user_id = #{userId} AND article_id = #{articleId}
    </select>

    <!-- 查询用户的收藏文章ID列表（分页） -->
    <select id="selectArticleIdsByUserId" resultType="long">
        SELECT article_id
        FROM user_article_favorite
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计用户的收藏文章总数 -->
    <select id="countByUserId" resultType="long">
        SELECT COUNT(*)
        FROM user_article_favorite
        WHERE user_id = #{userId}
    </select>

</mapper>
