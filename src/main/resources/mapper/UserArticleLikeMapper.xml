<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.UserArticleLikeMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.UserArticleLike">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="article_id" property="articleId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 插入点赞记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_article_like (user_id, article_id)
        VALUES (#{userId}, #{articleId})
    </insert>

    <!-- 删除点赞记录 -->
    <delete id="delete">
        DELETE FROM user_article_like
        WHERE user_id = #{userId} AND article_id = #{articleId}
    </delete>

    <!-- 检查用户是否已点赞 -->
    <select id="countByUserIdAndArticleId" resultType="int">
        SELECT COUNT(*)
        FROM user_article_like
        WHERE user_id = #{userId} AND article_id = #{articleId}
    </select>

</mapper>
