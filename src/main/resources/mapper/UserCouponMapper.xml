<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.UserCouponMapper">

    <resultMap id="BaseResultMap" type="com.travel.entity.UserCoupon">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="coupon_id" property="couponId"/>
        <result column="status" property="status"/>
        <result column="used_time" property="usedTime"/>
        <result column="order_id" property="orderId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <!-- 关联查询优惠券信息 -->
        <association property="coupon" javaType="com.travel.entity.Coupon">
            <id column="coupon_id" property="id"/>
            <result column="coupon_name" property="name"/>
            <result column="coupon_type" property="type"/>
            <result column="coupon_amount" property="amount"/>
            <result column="coupon_min_amount" property="minAmount"/>
            <result column="coupon_scope" property="scope"/>
            <result column="coupon_valid_start_time" property="validStartTime"/>
            <result column="coupon_valid_end_time" property="validEndTime"/>
        </association>
    </resultMap>

    <sql id="Base_Column_List">
        uc.id, uc.user_id, uc.coupon_id, uc.status, uc.used_time, uc.order_id,
        uc.create_time, uc.update_time
    </sql>

    <sql id="Coupon_Column_List">
        c.name as coupon_name, c.type as coupon_type, c.amount as coupon_amount,
        c.min_amount as coupon_min_amount, c.scope as coupon_scope,
        c.valid_start_time as coupon_valid_start_time,
        c.valid_end_time as coupon_valid_end_time
    </sql>

    <!-- 查询用户优惠券列表 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>,
        <include refid="Coupon_Column_List"/>
        FROM user_coupon uc
        LEFT JOIN coupon c ON uc.coupon_id = c.id
        WHERE uc.user_id = #{userId}
        <if test="status != null">
            AND uc.status = #{status}
        </if>
        ORDER BY uc.create_time DESC
        <if test="offset != null and pageSize != null">
            LIMIT #{offset}, #{pageSize}
        </if>
    </select>

    <!-- 统计用户优惠券数量 -->
    <select id="countByUserId" resultType="long">
        SELECT COUNT(*)
        FROM user_coupon
        WHERE user_id = #{userId}
        <if test="status != null">
            AND status = #{status}
        </if>
    </select>

    <!-- 根据ID查询用户优惠券 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>,
        <include refid="Coupon_Column_List"/>
        FROM user_coupon uc
        LEFT JOIN coupon c ON uc.coupon_id = c.id
        WHERE uc.id = #{id}
    </select>

    <!-- 插入用户优惠券 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_coupon (
            user_id, coupon_id, status
        ) VALUES (
            #{userId}, #{couponId}, #{status}
        )
    </insert>

    <!-- 更新用户优惠券 -->
    <update id="updateById">
        UPDATE user_coupon
        <set>
            <if test="status != null">status = #{status},</if>
            <if test="usedTime != null">used_time = #{usedTime},</if>
            <if test="orderId != null">order_id = #{orderId},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 更新用户优惠券状态 -->
    <update id="updateStatus">
        UPDATE user_coupon
        SET status = #{status}
        WHERE id = #{id}
    </update>

</mapper>
